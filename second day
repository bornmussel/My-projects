#tip calculator

bill = float(input("\nTotal bill\n"))

tip = int(input("\nHow much tip would you like to give? (%)\n"))

after_tip = bill*(tip/100)

print(f"Total after tip:{bill+after_tip}")

people = int(input("\nHow many people to split the bill?\n "))

per_person = round((bill+after_tip)/people,2)

print(f"Each person should pay: ${per_person}")

